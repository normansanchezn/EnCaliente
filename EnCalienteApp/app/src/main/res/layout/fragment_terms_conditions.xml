<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.register.childfragments.termsandconditions.TermsConditionsFragment">

    <ImageView
        android:id="@+id/ivTermsConditions"
        android:layout_width="@dimen/dp120"
        android:layout_height="@dimen/dp120"
        android:layout_marginTop="@dimen/dp32"
        android:layout_marginStart="@dimen/dp32"
        android:src="@drawable/image_condition_terms"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/tvTitlePhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp32"
        android:layout_marginTop="@dimen/dp32"
        android:layout_marginEnd="@dimen/dp32"
        android:text="@string/title_terms_conditions"
        android:textSize="@dimen/sp24"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivTermsConditions" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:layout_marginTop="@dimen/dp16"
        android:text="@string/description_terms_conditions"
        android:textColor="@color/color_gray"
        app:layout_constraintEnd_toStartOf="@+id/cbTermsConditions"
        app:layout_constraintStart_toStartOf="@+id/tvTitlePhoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/tvTitlePhoneNumber" />

    <CheckBox
        android:id="@+id/cbTermsConditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tvDescription"
        app:layout_constraintEnd_toEndOf="@+id/tvTitlePhoneNumber"
        app:layout_constraintTop_toTopOf="@+id/tvDescription" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabConfirmTermsAndCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="@color/colorAccent"
        android:clickable="true"
        android:src="@drawable/ic_siguiente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@null"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>